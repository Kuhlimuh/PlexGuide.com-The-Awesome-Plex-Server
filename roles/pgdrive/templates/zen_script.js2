#!/bin/bash
if pidof -o %PPID -x "$0"; then
   exit 1
fi

sleep 30
while true
do
## Sync, Sleep 2  Minutes, Repeat. No BWLimit for ZenDrive
rclone move --tpslimit 6 --exclude='**partial~' --exclude="**_HIDDEN~" --exclude=".unionfs/**" --exclude=".unionfs-fuse/**" --checkers=16 --max-size 99G --log-level INFO --stats 5s /mnt/move gdrive:/
sleep 120
# Remove empty directories (MrWednesday)
find "/mnt/move/" -mindepth 2 -type d -empty -delete
done
